<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane fx:controller="com.cyrex.client.gui.controllers.SignUpController"
            xmlns:fx="http://javafx.com/fxml" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@styles/application.css">
    <center>
        <VBox fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200" minWidth="300.0"
              prefHeight="300.0" prefWidth="400.0" spacing="5.0" stylesheets="@styles/application.css">

            <Text fx:id="welcomeText" text="welcome!" textAlignment="CENTER" wrappingWidth="350" VBox.vgrow="NEVER"/>

            <TextField fx:id="usernameField" promptText="username"/>

            <PasswordField fx:id="passwordField" promptText="password"/>

            <PasswordField fx:id="repeatPasswordField" promptText="repeat password"/>

            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="489.0" spacing="20" VBox.vgrow="NEVER">
                <Button fx:id="signUpBtn" onMouseClicked="#signUp" text="sign up"/>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </HBox>

            <Text fx:id="actionTarget" textAlignment="CENTER" wrappingWidth="350.0">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Text>
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <Button fx:id="backBtn" onMouseClicked="#goBack" text="back">
            <BorderPane.margin>
                <Insets bottom="35" left="30"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <opaqueInsets>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </opaqueInsets>
</BorderPane>