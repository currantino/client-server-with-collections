<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane nodeOrientation="LEFT_TO_RIGHT" stylesheets="@styles/application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyrex.client.gui.controllers.LoginController">
    <center>
        <VBox fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200" minWidth="300.0" prefHeight="300.0" prefWidth="400.0" spacing="5.0" stylesheets="@styles/application.css">
            <Text fx:id="welcomeText" text="welcome!" textAlignment="CENTER" wrappingWidth="350" VBox.vgrow="NEVER" />
            <TextField id="userNameText" fx:id="usernameField" prefHeight="45.0" prefWidth="554.0" promptText="username" />
            <PasswordField fx:id="passwordField" prefHeight="45.0" prefWidth="574.0" promptText="password" />
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="489.0" spacing="20" VBox.vgrow="NEVER">
                <Button fx:id="loginBtn" onMouseClicked="#login" text="login" />
                <Button fx:id="signUpBtn" onMouseClicked="#signUp" text="sign up" />
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </HBox>

            <Text fx:id="actionTarget" textAlignment="CENTER" wrappingWidth="350.0">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin></Text>

            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <Button fx:id="exitBtn" onMouseClicked="#exit" text="exit">
            <BorderPane.margin>
                <Insets bottom="35" left="30" />
            </BorderPane.margin>
        </Button>
    </bottom>

    <opaqueInsets>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </opaqueInsets>

</BorderPane>
