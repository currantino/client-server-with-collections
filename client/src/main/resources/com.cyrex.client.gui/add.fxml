<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" fillWidth="false" stylesheets="@styles/add.css" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyrex.client.gui.controllers.AddController">

    <Label text="route name" textAlignment="CENTER"/>
    <TextField fx:id="nameTextField"/>

    <Label text="route distance"/>
    <TextField fx:id="distanceTextField"/>
    <GridPane hgap="5">
        <VBox.margin>
            <Insets top="25" right="25" left="25"/>
        </VBox.margin>
        <Label text="departure" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0"/>
        <TextField fx:id="departureNameTextField" GridPane.columnIndex="0" GridPane.columnSpan="3"
                   GridPane.rowIndex="1"/>
        <Label text="x" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="departureXTextField" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="y" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="departureYTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="z" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="departureZTextField" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

        <Label text="destination" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="0"/>
        <TextField fx:id="destinationNameTextField" GridPane.columnIndex="5" GridPane.columnSpan="3"
                   GridPane.rowIndex="1"/>
        <Label text="x" GridPane.columnIndex="5" GridPane.rowIndex="2"/>
        <TextField fx:id="destinationXTextField" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
        <Label text="y" GridPane.columnIndex="6" GridPane.rowIndex="2"/>
        <TextField fx:id="destinationYTextField" GridPane.columnIndex="6" GridPane.rowIndex="3"/>
        <Label text="z" GridPane.columnIndex="7" GridPane.rowIndex="2"/>
        <TextField fx:id="destinationZTextField" GridPane.columnIndex="7" GridPane.rowIndex="3"/>
    </GridPane>
    <Button fx:id="confirmBtn" defaultButton="true" onAction="#confirm" text="confirm" textAlignment="CENTER">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>
    <GridPane.margin>
        <Insets top="15"/>
    </GridPane.margin>
</VBox>
